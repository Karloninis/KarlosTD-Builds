{
  "name": "Karlos-TD",
  "version": "1.8.0",
  "description": "Karlos TD - Desktop Client",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win portable -p never",
    "build-linux": "electron-builder --linux AppImage -p never",
    "build-mac": "electron-builder --mac -p never",
    "build-all": "npm run build-win && npm run build-linux && npm run build-mac"
  },
  "build": {
    "appId": "com.karlos.td",
    "productName": "Karlos TD",
    "mac": {
      "target": {
        "target": "dmg",
        "arch": ["universal"]
      }
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [],
  "author": "Karlo",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^24.9.0"
  }
}